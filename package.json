{
  "name": "bulmil",
  "version": "0.0.1",
  "repository": "git@github.com:gomah/bulmil.git",
  "author": "Gomah <hi@gomah.fr>",
  "license": "UNLICENSED",
  "files": [
    "bulmil.scss",
    "src/",
    "dist",
    "css"
  ],
  "types": "src/components.d.ts",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs.js",
  "es2017": "dist/esm/index.mjs.js",
  "jsnext:main": "dist/esm/index.mjs.js",
  "collection": "dist/collection/collection-manifest.json",
  "main": "dist/index.js",
  "unpkg": "css/bulmil.css",
  "style": "css/bulmil.min.css",
  "scripts": {
    "build": "yarn build:clean && yarn build:scss && yarn build:autoprefix && yarn build:min && yarn build:components",
    "build:autoprefix": "postcss --use autoprefixer --map false --output css/bulmil.css css/bulmil.css",
    "build:min": "cleancss -o css/bulmil.min.css css/bulmil.css",
    "build:scss": "node-sass --output-style expanded --source-map true bulmil.scss css/bulmil.css",
    "build:docs": "stencil build docs-readme",
    "build:clean": "rimraf css",
    "build:components": "stencil build --prod",
    "start": "stencil build --dev --watch --serve",
    "prepublishOnly": "yarn build",
    "test:lint:ts": "eslint --ext .ts,.tsx --ignore-path .gitignore src/components/",
    "test:lint:scss": "stylelint 'src/**/*.scss' --syntax scss",
    "test:stencil": "jest",
    "test:stencil:watch": "jest --watch",
    "test": "yarn test:lint:ts && yarn test:lint:scss && yarn test:stencil"
  },
  "pre-commit": [
    "test:lint:ts",
    "test:lint:scss",
    "test:stencil"
  ],
  "devDependencies": {
    "@stencil/core": "^1.1.6",
    "@stencil/postcss": "^1.0.1",
    "@stencil/sass": "^1.0.1",
    "@types/autoprefixer": "^9.5.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.2",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "autoprefixer": "^9.6.1",
    "clean-css-cli": "^4.3.0",
    "css-loader": "^3.0.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.8.0",
    "node-sass": "^4.12.0",
    "postcss-cli": "^6.1.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-prettier": "^1.1.1",
    "stylelint-scss": "^3.9.1",
    "workbox-build": "^4.3.1"
  },
  "dependencies": {
    "bulma": "^0.7.5",
    "classnames": "^2.2.6"
  }
}

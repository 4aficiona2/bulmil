{
  "name": "@bulmil/root",
  "version": "0.0.8",
  "repository": "git@github.com:gomah/bulmil.git",
  "author": "Gomah <hi@gomah.fr>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:storybook": "build-storybook -c .storybook -s www -o storybook/",
    "watch": "node --max_old_space_size=4096 ./node_modules/.bin/stencil build --watch --recursive --serve --config ./packages/bulmil/stencil.config.ts",
    "release": "lerna version --conventional-commits",
    "storybook.run": "start-storybook -p 9006 -s packages/bulmil/www",
    "storybook": "npm-run-all --parallel watch storybook.run"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@storybook/addon-a11y": "^5.2.5",
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-centered": "^5.2.5",
    "@storybook/addon-knobs": "^5.2.5",
    "@storybook/addon-notes": "^5.2.5",
    "@storybook/addon-storysource": "^5.2.5",
    "@storybook/addon-viewport": "^5.2.5",
    "@storybook/html": "^5.2.5",
    "@storybook/theming": "^5.2.5",
    "@types/node": "^12.12.6",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "husky": "^3.0.9",
    "lerna": "^3.18.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "standard-version": "^7.0.0"
  }
}
